{
    "compilerOptions": {
        "declaration": true,
        "sourceMap": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "target": "es2017",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./types"]
}
